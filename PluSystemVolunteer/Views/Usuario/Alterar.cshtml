@using PluSystemVolunteer.Models;

@{
    Usuario u = ViewBag.Usuario;
}

@using (Html.BeginForm("Alterar", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @*<input type="text" readonly="" class="" placeholder="" />*@
    @Html.Hidden("hdnId", u.UsuarioId)
    <fieldset>
        <legend>Cadastrar Usuário</legend>
        <div id="Id" class="form-group">
            @Html.Label("Id", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtId", u.UsuarioId, new { @class = "form-control", @placeholder = "Digite o nome do usuário", @readonly = "" })
            </div>
        </div>
        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNome", u.Nome, new { @class = "form-control", @placeholder = "Digite o nome do usuário" })
            </div>
        </div>

        <div id="Apelido" class="form-group">
            @Html.Label("Apelido", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtApelido", u.Apelido, new { @class = "form-control", @placeholder = "Digite o apelido do usuário" })
            </div>
        </div>

        <div id="Telefone" class="form-group">
            @Html.Label("Telefone", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtTelefone", u.Telefone, new { @class = "form-control", @placeholder = "Digite o telefone do usuário" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Salvar" />
            </div>
        </div>
    </fieldset>
}
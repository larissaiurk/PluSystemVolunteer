@{
    Layout = "~/Views/Shared/_Login_layout.cshtml";
}
@using (Html.BeginForm("Cadastrar", "Usuario", FormMethod.Post, new { @class = "form-horizontal", @id = "cadastrarUsuario", enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Cadastrar Usuário</legend>
        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNome", "", new { @class = "form-control", @id = "txtNome", @placeholder = "Digite o nome do usuário" })
            </div>
        </div>
        <div id="Apelido" class="form-group">
            @Html.Label("Email", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtEmail", "", new { @class = "form-control", @placeholder = "Digite o seu email" })
            </div>
        </div>
        <div id="Telefone" class="form-group">
            @Html.Label("Telefone", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtTelefone", "", new { @class = "form-control", @placeholder = "Digite o telefone do usuário" })
            </div>
        </div>
        <div id="Telefone" class="form-group">
            @Html.Label("Senha", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.Password("txtSenha", "", new { @class = "form-control", @placeholder = "Digite a sua senha" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Cadastrar" />
            </div>
        </div>
    </fieldset>



}
@model List<PluSystemVolunteer.Models.CategoriaEvento>

@{
    DateTime data = ViewBag.DataAtual;
}
    <p>
        @Html.ActionLink("Cadastrar Categoria Evento", "Cadastrar", "CategoriaEvento")
    </p>
    <table class="table">
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Ação
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id=item.CategoriaId }) |
                @Html.ActionLink("Deletar", "Remover", new { id=item.CategoriaId })
            </td>
        </tr>
    }
    
    </table>


@model List<PluSystemVolunteer.Models.Evento>

@{
   
}
    <p>
        @Html.ActionLink("Cadastrar novo evento", "Cadastrar")
    </p>
    <table class="table">
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Endereço
            </th>
            <th>
                Preço
            </th>
            <th>
                Data
            </th>
            <th>
                Imagem
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereço)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <img src="~/Images/@item.Imagem" alt="@item.Descricao"
                     style="width:100px" />
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id=item.EventoId }) |
                @Html.ActionLink("Remover", "Remover", new { id=item.EventoId })
            </td>
        </tr>
    }
    
    </table>


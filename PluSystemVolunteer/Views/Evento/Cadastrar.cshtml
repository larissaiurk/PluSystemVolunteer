@model PluSystemVolunteer.Models.Evento

@{
}

    @using (Html.BeginForm("Cadastrar", "Evento", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4> Cadastrar Evento</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <fieldset>
                <legend>Dados de Endereço</legend>
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Cep, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Cep, new { @class = "form-control", @placeholder = "Digite o cep" })
                    </div>
                </div>

                <div id="Logradouro" class="form-group">
                    @Html.LabelFor(model => model.Logradouro, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Logradouro, new { @class = "form-control", @placeholder = "Digite o Endereço do local"})
                    </div>
                </div>

                <div id="Bairro" class="form-group">
                    @Html.LabelFor(model => model.Bairro, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Bairro, new { @class = "form-control", @placeholder = "Digite o bairro do local"})
                    </div>
                </div>
            </fieldset>


            <div class="form-group">
                @Html.Label("Descrição", new { @class = "control-label col-sm-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("Preço", new { @class = "control-label col-sm-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("Data", new { @class = "control-label col-sm-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                </div>
            </div>

            <div id="CategoriaEvento" class="form-group">
                @Html.LabelFor(model => model.CategoriaEvento, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.DropDownList("Categorias", null,
                    " -- SELECIONE -- ",
                    new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Voltar para lista", "Index")
    </div>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Plu System</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Content/main.js"></script>
    <link rel="stylesheet" href="~/Content/stylesheet.css">


</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Plu System Volunteer</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home",null, new { @class="nav-link"}) <span class="sr-only">(current)</span>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Perfil", "Cadastrar", "Usuario", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Grupo", "Index", "Grupo", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Categoria Evento", "Index", "CategoriaEvento", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Eventos", "Index", "Evento", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Ranking", "Index", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item"><a class="nav-link" href="#"><span class="fas fa-user"></span> Sign Up</a></li>
                <li class="nav-item"><a class="nav-link" href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div>
    </nav>

    <div id="conteudo" class="container"
         style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>

   @* <footer>
        <hr />
        <p style="text-align:center">
            Desenvolvido por Plu System &copy;
            @DateTime.Now.Year
        </p>
    </footer> *@

</body>
</html>

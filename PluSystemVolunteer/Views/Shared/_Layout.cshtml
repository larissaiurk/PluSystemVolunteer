
@{
    int idUsuario =  Convert.ToInt32(HttpContext.Current.Session["usuario"]);
    int admin = Convert.ToInt32(HttpContext.Current.Session["administrador"]);
   }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Plu System</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Content/main.js"></script>


</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Plu System Volunteer", "Index", "Home", null, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" }) <span class="sr-only">(current)</span>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Perfil", "Perfil", "Usuario", null, new { @class = "nav-link" })
                </li>

                @{

                    if (admin != 0)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Categoria Evento", "Index", "CategoriaEvento", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Eventos", "Index", "Evento", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Ranking", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                    } }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item">
                    @Html.ActionLink("Logout", "Logout", "Usuario", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div id="conteudo" class="container-fluid"
         style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>

    @* <footer>
            <hr />
            <p style="text-align:center">
                Desenvolvido por Plu System &copy;
                @DateTime.Now.Year
            </p>
        </footer> *@

</body>
</html>
